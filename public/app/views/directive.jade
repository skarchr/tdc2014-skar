.container
    .col-xs-12
        h1 BUILT-IN

.container
    .col-xs-12
        h3 ng-show / ng-hide
        .col-xs-6

            div(class="checkbox")
                label
                    input(ng-model="check", type="checkbox")
                    | Move ng-man

        .col-xs-6.well.text-center
            .col-xs-6
                img(src="/app/images/standing_blinking_512.gif", height="128", ng-hide="check")
            .col-xs-6
                img(src="/app/images/standing_blinking_512.gif", height="128", ng-show="check")

.container(ng-show="toggle.showCode.state", class="code-view")
    .col-xs-12
        div(ng-include="'app/views/partials/directive_code/code_1.html'")


.container
    .col-xs-12
        .col-xs-12.well
            h3 ng-repeat
            div(class="col-xs-3 panel text-center" ng-repeat="mod in model.module")
                .col-xs-12
                    h4 {{ mod.number }}
                .col-xs-12
                    img(ng-src="{{mod.image}}", height="48")
                .col-xs-12
                    h5 {{ mod.name }}
.container(ng-show="toggle.showCode.state", class="code-view")
    .col-xs-12
        div(ng-include="'app/views/partials/directive_code/code_2.html'")

.container
    .col-xs-12
        .col-xs-12.well
            h3 Others worth mentioning

            ul
                li ng-disabled
                li ng-options
                li ng-click
                li ng-include
                li ...and many more!

.container
    .col-xs-12
        h1 MAKE YOUR OWN!
        .col-xs-12.well
            h3 DRAGGABLE
            div(class="col-xs-3")
                img(ng-src="{{mod.image}}", ng-repeat="mod in model.module" , height="48", data-draggable)
.container(ng-show="toggle.showCode.state", class="code-view")
    .col-xs-12
        div(ng-include="'app/views/partials/directive_code/code_3.html'")
